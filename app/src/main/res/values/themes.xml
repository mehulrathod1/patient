<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Patient" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/action_mode_color</item>
        <item name="colorAccent">@color/action_mode_color</item>

        <item name="colorPrimaryVariant">@color/action_mode_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/action_mode_color</item>
        <item name="colorSecondaryVariant">@color/action_mode_color</item>
        <item name="colorOnSecondary">@color/action_mode_color</item>
<!--        <item name="android:forceDarkAllowed" tools:targetApi="30">false</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Patient.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Patient.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Patient.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>