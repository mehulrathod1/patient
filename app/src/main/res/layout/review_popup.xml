<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:text="Review and Ratting"
            android:textColor="@color/action_mode_color_300"
            android:textSize="@dimen/_18sdp" />

        <EditText
            android:id="@+id/review_text"
            style="@style/m_semi_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:layout_margin="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:height="@dimen/_30sdp"
            android:background="@drawable/edt_bg"
            android:gravity="top"
            android:hint="Add Review"
            android:padding="@dimen/_10sdp"
            android:paddingLeft="@dimen/_4sdp" />

        <RatingBar
            android:id="@+id/ratting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_16sdp"
            android:stepSize="1"
            android:theme="@style/RatingBar" />


        <TextView
            android:id="@+id/review_submit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_36sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_24sdp"
            android:background="@drawable/button_blue_border"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />


    </LinearLayout>


</RelativeLayout>